{
    "properties": {
        "displayName": "9.3",
        "description": "9.3 - Ensure web app is using the latest version of TLS encryption",
        "parameters": {
            "policyEffect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy"
                },
                "allowedValues": [
                    "AuditIfNotExists",
                    "Disabled"
                ],
                "defaultValue": "AuditIfNotExists"
            },
            "minTLSVersion": {
                "type": "string",
                "metadata": {
                    "description": "Minimum version of TLS encryption to check web app settings against.",
                    "displayName": "Minimum TLS Version Required"
                },
                "defaultValue": "1.2"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Web/sites"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('policyEffect')]",
                "details": {
                    "type": "Microsoft.Web/sites",
                    "name": "[field('name')]",
                    "existenceCondition": {
                        "allOf": [
                            {
                                "field": "Microsoft.Web/sites/config/minTlsVersion",
                                "equals": "[parameters('minTLSVersion']"
                            }                    
                        ]
                    }
                }
            }
        }
    }
}