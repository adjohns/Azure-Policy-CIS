{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Web/sites"
            },
            {
                "not": {
                    "field": "Microsoft.Web/sites/httpsOnly",
                    "equals": true
                }
            }
        ]
    },
    "then": {
        "effect": "[parameters('policyEffect')]",
        "details": {
            "type": "Microsoft.Web/sites",
            "existenceCondition": {
                "allOf": [
                    {
                        "field": "Microsoft.Web/sites/httpsOnly",
                        "equals": true
                    }                    
                ]
            }
        }
    }
}