{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Web/sites"
            }
        ]
    },
    "then": {
        "effect": "[parameters('policyEffect')]",
        "details": {
            "type": "Microsoft.Web/sites",
            "name": "[field('name')]",
            "existenceCondition": {
                "allOf": [
                    {
                        "field": "Microsoft.Web/sites/config/siteAuthEnabled",
                        "equals": "true"
                    }                    
                ]
            }
        }
    }
}